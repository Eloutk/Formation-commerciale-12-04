import { createMiddlewareClient } from '@supabase/auth-helpers-nextjs'
import { NextResponse } from 'next/server'
import type { NextRequest } from 'next/server'

export async function middleware(req: NextRequest) {
  const res = NextResponse.next()
  const supabase = createMiddlewareClient({ req, res })

  // V√©rifier la session
  const {
    data: { session },
  } = await supabase.auth.getSession()

  console.log("üîç Middleware - Path:", req.nextUrl.pathname, "Session:", !!session)

  // Pages publiques autoris√©es
  const publicPages = ['/login', '/register']
  const isPublicPage = publicPages.includes(req.nextUrl.pathname)

  // Si l'utilisateur n'est pas connect√© et essaie d'acc√©der √† une page prot√©g√©e
  if (!session && !isPublicPage) {
    console.log("üö´ Acc√®s refus√© - redirection vers /login")
    const redirectUrl = req.nextUrl.clone()
    redirectUrl.pathname = '/login'
    return NextResponse.redirect(redirectUrl)
  }

  // Si l'utilisateur est connect√© et essaie d'acc√©der aux pages de login/register
  if (session && isPublicPage) {
    console.log("‚úÖ Utilisateur connect√© sur page publique - redirection vers /")
    const redirectUrl = req.nextUrl.clone()
    redirectUrl.pathname = '/'
    return NextResponse.redirect(redirectUrl)
  }

  console.log("‚úÖ Acc√®s autoris√©")
  return res
}

export const config = {
  matcher: [
    /*
     * Match all request paths except for the ones starting with:
     * - api (API routes)
     * - _next/static (static files)
     * - _next/image (image optimization files)
     * - favicon.ico (favicon file)
     * - public files (images, etc.)
     */
    '/((?!api|_next/static|_next/image|favicon.ico|.*\\.(?:svg|png|jpg|jpeg|gif|webp)$).*)',
  ],
} 